<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8FF">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:background="@drawable/close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:elevation="1dp"
        />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="4dp"
        android:layout_below="@+id/backButton"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:background="@drawable/test_covid">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPicture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:src="@drawable/person"
            android:layout_marginStart="10dp"
            android:elevation="1dp"
            android:layout_marginEnd="5dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:src="@color/white"
            android:layout_marginStart="8.4dp"
            />

        <TextView
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aimene Nouri"
            android:textSize="25dp"
            android:fontFamily="@font/exo2semibold"
            android:layout_toEndOf="@+id/userPicture"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aimene.ucd@gmail.com"
            android:textSize="14dp"
            android:layout_below="@+id/UserName"
            android:layout_toEndOf="@+id/userPicture"
            android:textColor="@color/white"
            android:layout_marginStart="11dp"
            android:alpha=".8"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:background="@drawable/form7"
        android:layout_below="@+id/layout1">

        <View
            android:id="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:alpha=".3"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

        <RelativeLayout
            android:layout_below="@+id/view"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/form7">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_settings_black_24dp"
                android:layout_centerVertical="true"
                android:elevation="2dp"/>

            <ImageView
                android:id="@+id/icon_chevron1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:alpha=".8"
                android:background="@drawable/ic_chevron_right_black_24dp"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings Profile"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon1"
                android:textColor="#000"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_below="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="0.8dp"
            android:alpha=".4"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_below="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/form7">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_lock_outline_black_24dp"/>

            <ImageView
                android:id="@+id/icon_chevron2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_chevron_right_black_24dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon2"
                android:textColor="#000"
                />



        </RelativeLayout>

        <View
            android:id="@+id/view_2"
            android:layout_below="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="0.8dp"
            android:layout_marginEnd="20dp"
            android:alpha=".4"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_below="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/form7">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:background="@drawable/user_location_icon"/>

            <ImageView
                android:id="@+id/icon_chevron3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_chevron_right_black_24dp"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Location"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon3"
                android:layout_marginStart="9dp"
                android:textColor="#000"
                />

        </RelativeLayout>

        <View
            android:id="@id/view1"
            android:layout_below="@id/layout4"
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:alpha=".3"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        android:layout_below="@+id/layout">

        <View
            android:id="@id/view2"
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:alpha=".3"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_below="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/form7">

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_settings_black_24dp"
                android:layout_centerVertical="true"
                android:elevation="2dp"/>


            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings Profile"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_1"
                android:textColor="#000"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_3"
            android:layout_below="@+id/relativelayout"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="0.8dp"
            android:alpha=".4"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_below="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/form7">

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_lock_outline_black_24dp"/>

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_2"
                android:textColor="#000"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_4"
            android:layout_below="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="0.8dp"
            android:layout_marginEnd="20dp"
            android:alpha=".4"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/form7">

            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:background="@drawable/user_location_icon"/>

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Location"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_3"
                android:layout_marginStart="9dp"
                android:textColor="#000"
                />

        </RelativeLayout>

        <View
            android:id="@id/view3"
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:alpha=".3"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:background="#B3B3B3"/>

    </RelativeLayout>


</RelativeLayout>