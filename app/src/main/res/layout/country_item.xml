<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_country"
    android:layout_height="wrap_content">

     <RelativeLayout
         android:id="@+id/item_country_layout"
         android:elevation="5dp"
         android:padding="4dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


          <ImageView
              android:layout_gravity="center_vertical"
              android:id="@+id/country_flag"
              android:layout_width="50dp"
              android:layout_height="35dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_alignParentStart="true"
              android:layout_marginStart="5dp"
              android:layout_marginBottom="5dp"/>

          <TextView
              android:id="@+id/country_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="UNITED STATES OF AMERICA"
              android:textSize="15sp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="13dp"
              android:layout_toEndOf="@+id/country_flag"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:textColor="@color/colorPrimary"
              android:textStyle="bold"
              android:fontFamily="@font/exo2semibold"/>


          <TextView
              android:id="@+id/country_total_cases"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="15000"
              android:textSize="15dp"
              android:layout_centerVertical="true"
              android:layout_marginEnd="20dp"
              android:layout_centerHorizontal="true"
              android:layout_alignParentEnd="true"
              android:textColor="#FF0000"
              android:textStyle="bold"
              android:fontFamily="@font/exo2semibold"/>

     </RelativeLayout>

     <View
         android:layout_below="@+id/item_country_layout"
         android:layout_width="wrap_content"
         android:layout_marginLeft="38dp"
         android:layout_height="0.5dp"
         android:alpha=".5"
         android:layout_marginTop="8dp"
         android:layout_centerHorizontal="true"
         android:background="#B3B3B3"/>

</RelativeLayout>