<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".activities.SettingsItems.EditProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/chevron_icon2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:elevation="1dp"
                />

            <TextView
                android:id="@+id/reset_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/cancel"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10dp"
                android:alpha=".89"
                android:textSize="26dp"/>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_below="@+id/reset_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userPicture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/person"
                    android:layout_centerHorizontal="true"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/updatePicture"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="-20dp"
                    android:layout_toEndOf="@+id/userPicture"
                    android:src="@drawable/icon_cam1" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/userPicture"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/view_form"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/userPicture"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/view_form1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/layout3"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/UserName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/name"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:elevation="2dp"
                    />

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/UserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/email"
                    android:background="@drawable/edittext"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/UserName"
                    android:singleLine="true"
                    />

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/UserPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/phone"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:layout_below="@+id/UserEmail"
                    android:elevation="2dp"
                    />

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/UserCIN"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/cin"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:layout_below="@+id/UserPhoneNumber"
                    android:elevation="2dp"
                    />

                <EditText
                    android:id="@+id/UserBirth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/birth"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/UserCIN"
                    android:singleLine="true"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_date_range_black_24dp"
                    android:editable="false"
                    android:focusable="false"
                    android:elevation="2dp"
                    />

                <!--<EditText
                    android:id="@+id/UserCountry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/country"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/UserBirth"
                    android:singleLine="true"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:elevation="2dp"
                    />-->


                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/gender"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="5dp"
                    android:alpha=".89"
                    android:layout_below="@+id/UserBirth"
                    />

                <RelativeLayout
                    android:id="@+id/radio"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_below="@+id/text"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:textColor="#504F4F"
                            android:layout_marginStart="20dp"
                            android:padding="10dp"
                            android:layout_marginEnd="20dp"
                            android:buttonTint="#7777FF"
                            android:background="@drawable/edittext"
                            android:elevation="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            />



                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            android:padding="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textColor="#504F4F"
                            android:buttonTint="#7777FF"
                            android:layout_marginTop="5dp"
                            android:elevation="2dp"
                            android:background="@drawable/edittext"/>

                    </RadioGroup>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="10sp"
                    android:layout_below="@+id/radio"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/validate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:padding="10dp"
                        android:textSize="19sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="15sp"
                        android:textColor="#fff"
                        android:textAllCaps="true"
                        android:background="@drawable/button1"
                        android:elevation="2dp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>