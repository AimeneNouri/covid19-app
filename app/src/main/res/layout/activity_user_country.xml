<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    tools:context=".activities.User_country">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="34.5dp"
                    android:layout_height="34.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/close"
                    />

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:text=""
                        android:textColor="#32354E"
                        android:textStyle="bold"
                        android:alpha=".8"
                        android:fontFamily="@font/exobold"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/card" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="10sp"
                        android:layout_centerVertical="true"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/country_flag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:ignore="UnusedAttribute"
                            />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/last_update_at"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_alignStart="@+id/layout"
                    android:layout_below="@+id/layout"
                    android:alpha=".7"
                    android:layout_marginStart="1dp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text=""
                    android:layout_toEndOf="@+id/text5"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/layout"
                    android:alpha=".7" />

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_marginTop="25sp">

                    <RelativeLayout
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/Chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/chart_form"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:elevation="2sp"
                            android:weightSum="2">

                            <org.eazegraph.lib.charts.PieChart
                                android:id="@+id/piechart"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:padding="6dp"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <androidx.cardview.widget.CardView
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        card_view:cardBackgroundColor="@color/white"
                                        card_view:cardCornerRadius="3dp"
                                        card_view:cardElevation="0dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cases"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/total_cases"
                                        android:layout_marginStart="10sp"
                                        android:fontFamily="@font/exo2semibold"
                                        android:textColor="#32354E"
                                        android:alpha=".8"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="10sp">

                                    <androidx.cardview.widget.CardView
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        card_view:cardBackgroundColor="@color/white"
                                        card_view:cardCornerRadius="3dp"
                                        card_view:cardElevation="0dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/recovered"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/recovered"
                                        android:layout_marginStart="10sp"
                                        android:fontFamily="@font/exo2semibold"
                                        android:textColor="#32354E"
                                        android:alpha=".8"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="10sp">

                                    <androidx.cardview.widget.CardView
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        card_view:cardBackgroundColor="@color/white"
                                        card_view:cardCornerRadius="3dp"
                                        card_view:cardElevation="0dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/deaths"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/death"
                                        android:layout_marginStart="10sp"
                                        android:fontFamily="@font/exo2semibold"
                                        android:textAllCaps="false"
                                        android:textColor="#32354E"
                                        android:alpha=".8"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="10sp">

                                    <androidx.cardview.widget.CardView
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        card_view:cardBackgroundColor="@color/white"
                                        card_view:cardCornerRadius="3dp"
                                        card_view:cardElevation="0dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/active"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/activeCase"
                                        android:layout_marginStart="10sp"
                                        android:fontFamily="@font/exo2semibold"
                                        android:textColor="#32354E"
                                        android:alpha=".8"
                                        android:textAllCaps="false"
                                        />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/linear"
                        android:layout_below="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="3dp">

                        <RelativeLayout
                            android:id="@+id/Confirmed"
                            android:layout_width="150dp"
                            android:padding="10sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:background="@drawable/case_form">

                            <ImageView
                                android:id="@+id/icon_stocks1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="19dp"
                                android:layout_marginStart="35dp"
                                android:layout_toEndOf="@+id/layout3"
                                android:src="@drawable/cases_stocks"/>

                            <TextView
                                android:id="@+id/total_cases_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_cases"
                                android:fontFamily="@font/exobold"
                                android:gravity="center"
                                android:text="@string/confirmed"
                                android:elevation="2dp"
                                android:alpha=".89"
                                android:layout_marginBottom="5dp"
                                android:textColor="#32354E"
                                android:layout_alignStart="@+id/total_cases"
                                android:textAllCaps="true"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/exo2semibold"
                                android:text=""
                                android:elevation="2dp"
                                android:textAlignment="center"
                                android:textColor="#FF8748"
                                android:layout_marginTop="10sp"
                                android:alpha=".9"
                                android:layout_below="@+id/layout3"
                                android:textSize="28dp" />

                            <RelativeLayout
                                android:id="@+id/layout3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:elevation="1dp"
                                android:padding="5dp"
                                android:background="@drawable/cases_background">

                                <ImageView
                                    android:id="@+id/icon_cases"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1.5dp"
                                    android:layout_marginEnd="1dp"
                                    android:src="@drawable/upward_cases" >
                                </ImageView>

                                <TextView
                                    android:id="@+id/today_cases"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/exo2semibold"
                                    android:text="0"
                                    android:layout_toEndOf="@+id/icon_cases"
                                    android:textSize="11sp"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:textColor="#FF8748"
                                    />

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/Recovered"
                            android:layout_width="150dp"
                            android:padding="10sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:background="@drawable/recovered_form">

                            <ImageView
                                android:id="@+id/icon_stocks2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="19dp"
                                android:layout_marginStart="35dp"
                                android:layout_toEndOf="@+id/layout2"
                                android:src="@drawable/recovered_stocks"/>

                            <TextView
                                android:id="@+id/total_recovered_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_recovered"
                                android:fontFamily="@font/exobold"
                                android:gravity="center"
                                android:text="@string/recovered"
                                android:elevation="2dp"
                                android:alpha=".89"
                                android:layout_marginBottom="5dp"
                                android:textColor="#32354E"
                                android:layout_alignStart="@+id/total_recovered"
                                android:textAllCaps="true"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_recovered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/exo2semibold"
                                android:text=""
                                android:elevation="2dp"
                                android:textAlignment="center"
                                android:textColor="#0E9508"
                                android:layout_marginTop="10sp"
                                android:alpha=".9"
                                android:layout_below="@+id/layout2"
                                android:textSize="28dp" />

                            <RelativeLayout
                                android:id="@+id/layout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:elevation="1dp"
                                android:padding="5dp"
                                android:background="@drawable/recovered_background">

                                <ImageView
                                    android:id="@+id/icon_recovered"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1.5dp"
                                    android:layout_marginEnd="1dp"
                                    android:src="@drawable/upward_recovered" >
                                </ImageView>

                                <TextView
                                    android:id="@+id/today_recovered"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/exo2semibold"
                                    android:text="0"
                                    android:layout_toEndOf="@+id/icon_recovered"
                                    android:textSize="11sp"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:textColor="#0E9508"
                                    />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear">

                        <RelativeLayout
                            android:id="@+id/layout_3"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:background="@drawable/chart_form">

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="70dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/path8"
                                android:layout_alignParentBottom="true"
                                android:elevation="1dp"/>

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="70dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:elevation="1dp"
                                android:background="@drawable/path9"/>

                            <RelativeLayout
                                android:id="@+id/daily_confirmed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/chart_form">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:padding="8sp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:text="@string/daily_confirmed_cases"
                                        android:fontFamily="@font/exo2semibold"
                                        android:textColor="#32354E"
                                        android:elevation="2dp"
                                        android:alpha=".89"/>

                                    <TextView
                                        android:id="@+id/daily_confirmed_cases"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15sp"
                                        android:text="2500"
                                        android:textSize="24sp"
                                        android:elevation="2dp"
                                        android:fontFamily="@font/exobold"
                                        android:textColor="@color/colorPrimary"
                                        android:alpha=".9"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11sp"
                                        android:layout_marginTop="15sp"
                                        android:text="@string/per_million_population"
                                        android:fontFamily="@font/exo2semibold"
                                        android:textColor="#32354E"
                                        android:elevation="2dp"
                                        android:alpha=".6"/>

                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/Death"
                            android:layout_width="150dp"
                            android:padding="10sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:background="@drawable/death_form">

                            <ImageView
                                android:id="@+id/icon_stocks3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="19dp"
                                android:layout_marginStart="35dp"
                                android:layout_toEndOf="@+id/layout4"
                                android:src="@drawable/death_strocks"/>

                            <TextView
                                android:id="@+id/total_deaths_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_deaths"
                                android:fontFamily="@font/exobold"
                                android:gravity="center"
                                android:text="@string/death"
                                android:elevation="2dp"
                                android:layout_alignStart="@+id/total_deaths"
                                android:textAllCaps="true"
                                android:alpha=".89"
                                android:layout_marginBottom="5dp"
                                android:textColor="#32354E"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_deaths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/exo2semibold"
                                android:text=""
                                android:elevation="2dp"
                                android:textAlignment="center"
                                android:textColor="#FF0000"
                                android:layout_marginTop="10sp"
                                android:alpha=".9"
                                android:layout_below="@+id/layout4"
                                android:textSize="28dp" />

                            <RelativeLayout
                                android:id="@+id/layout4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:padding="5dp"
                                android:elevation="1dp"
                                android:background="@drawable/death_background">

                                <ImageView
                                    android:id="@+id/icon_death"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1.5dp"
                                    android:layout_marginEnd="1dp"
                                    android:src="@drawable/upward_death"/>

                                <TextView
                                    android:id="@+id/today_deaths"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/exo2semibold"
                                    android:text="0"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    android:textColor="#FF0000"
                                    android:layout_centerVertical="true"
                                    android:textAlignment="center"
                                    android:layout_toEndOf="@+id/icon_death"
                                    />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_2"
                        android:layout_below="@+id/layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/CriticalCase"
                            android:layout_width="150dp"
                            android:padding="10sp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:elevation="2dp"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/critical_form">

                            <TextView
                                android:id="@+id/total_Critical_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exobold"
                                android:gravity="center"
                                android:text="@string/critical"
                                android:elevation="2dp"
                                android:alpha=".89"
                                android:textColor="#32354E"
                                android:layout_alignStart="@+id/total_Critical"
                                android:textAllCaps="true"
                                android:layout_below="@+id/total_Critical"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_Critical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2semibold"
                                android:text=""
                                android:elevation="2dp"
                                android:textAlignment="center"
                                android:textColor="#DA00FF"
                                android:layout_marginTop="63dp"
                                android:alpha=".9"
                                android:textSize="28dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ActiveCase"
                            android:layout_width="150dp"
                            android:padding="10sp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="5dp"
                            android:elevation="2dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/active_form">

                            <TextView
                                android:id="@+id/total_active_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exobold"
                                android:gravity="center"
                                android:text="@string/activeCase"
                                android:elevation="2dp"
                                android:alpha=".89"
                                android:textColor="#32354E"
                                android:layout_alignStart="@+id/total_active"
                                android:textAllCaps="true"
                                android:layout_below="@+id/total_active"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2semibold"
                                android:text=""
                                android:elevation="2dp"
                                android:textAlignment="center"
                                android:textColor="#2196F3"
                                android:layout_marginTop="63dp"
                                android:alpha=".9"
                                android:textSize="28dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/chart2"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/layout_2"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="25dp">

                        <RelativeLayout
                            android:id="@+id/Chart2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chart_form"
                            android:padding="30dp"
                            android:layout_marginBottom="10sp"
                            android:elevation="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fatality_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_cases"
                                    android:textSize="20sp"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/exo2semibold"
                                    android:textColor="@color/colorPrimary"
