<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8FF">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="34.5dp"
        android:layout_height="34.5dp"
        android:background="@drawable/close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:elevation="1dp"
        />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="4dp"
        android:layout_below="@+id/backButton"
        android:layout_marginTop="50dp"
        android:elevation="10dp"
        android:background="@drawable/test_covid">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPicture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:src="@drawable/person"
            android:layout_marginStart="10dp"
            android:elevation="1dp"
            android:layout_marginEnd="5dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:src="@color/white"
            android:layout_marginStart="8.4dp"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aimene Nouri"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/userPicture"
            android:fontFamily="@font/exo2semibold"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit_icon_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/form">



    </RelativeLayout>

</RelativeLayout>