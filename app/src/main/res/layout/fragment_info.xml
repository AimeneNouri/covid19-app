<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.infoFragment"
    android:background="#FFFFFF">


    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:elevation="5dp">

        <RelativeLayout
            android:id="@+id/corona"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corona"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/coronaVirusTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Coronavirus Test Request "
            android:textSize="18dp"
            android:fontFamily="@font/exo2semibold"
            android:layout_toEndOf="@+id/corona"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum Dolor Sit Amet, "
            android:textSize="15dp"
            android:fontFamily="@font/exo2semibold"
            android:layout_toEndOf="@+id/corona"
            android:layout_below="@+id/coronaVirusTest"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:alpha=".3"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_toEndOf="@+id/coronaVirusTest"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/symptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Symptoms "
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/exo2semibold"
        android:layout_below="@+id/background"
        android:textColor="#7777FF"
        android:layout_marginStart="25dp"
        />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkbox"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:text="More >"
        android:textColor="#000000"
        android:layout_below="@+id/background"
        android:fontFamily="@font/exo2semibold"
        android:textSize="14sp"
        android:alpha=".5"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/symptoms"
        android:fillViewport="true"
        android:measureAllChildren="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/imagebackground1"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/background4">

                    <TextView
                        android:id="@+id/feverText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="73dp"
                        android:fontFamily="@font/exo2regular"
                        android:text="High Fever"
                        android:layout_centerHorizontal="true"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/fever"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fever"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/imagebackground2"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/background4">

                    <TextView
                        android:id="@+id/coughText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="73dp"
                        android:fontFamily="@font/exo2regular"
                        android:text="Cough"
                        android:layout_centerHorizontal="true"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/cough"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cough"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">

                <RelativeLayout
                    android:id="@+id/imagebackground3"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/background4">

                    <TextView
                        android:id="@+id/soreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="73dp"
                        android:fontFamily="@font/exo2regular"
                        android:text="Sore Troath"
                        android:layout_centerHorizontal="true"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/sore"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sore_troath"/>

            </RelativeLayout>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>