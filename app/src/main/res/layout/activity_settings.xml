                            android:text="Change Location"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon3"
                            android:layout_marginStart="9dp"
                            android:textColor="#000"
                            />

                    </RelativeLayout>-->

                    <View
                        android:id="@id/view1"
                        android:layout_below="@id/change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/form7"
                    android:layout_below="@+id/layout">

                    <View
                        android:id="@id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                    <RelativeLayout
                        android:id="@+id/feedback"
                        android:layout_below="@id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="@drawable/form7">

                        <ImageView
                            android:id="@+id/icon_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/ic_feedback_black_24dp"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"/>


                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Give Feedback"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon_1"
                            android:textColor="#000"
                            />

                        <ImageView
                            android:id="@+id/icon_chevron_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:alpha=".8"
                            android:background="@drawable/ic_chevron_right_black_24dp"/>

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_3"
                        android:layout_below="@+id/feedback"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                    <RelativeLayout
                        android:id="@+id/share_app"
                        android:layout_below="@+id/view_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="@drawable/form7">

                        <ImageView
                            android:id="@+id/icon_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_share_black_24dp"/>

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share This App"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon_2"
                            android:textColor="#000"
                            />

                        <ImageView
                            android:id="@+id/icon_chevron_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:alpha=".8"
                            android:background="@drawable/ic_chevron_right_black_24dp"/>

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_4"
                        android:layout_below="@+id/share_app"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="0.8dp"
                        android:layout_alignParentEnd="true"
                        android:alpha=".5"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                    <RelativeLayout
                        android:id="@+id/rate_app"
                        android:layout_below="@+id/view_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="@drawable/form7">

                        <ImageView
                            android:id="@+id/icon_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:background="@drawable/ic_star_border_black_24dp"/>

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate This App"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon_3"
                            android:layout_marginStart="9dp"
                            android:textColor="#000"
                            />

                        <ImageView
                            android:id="@+id/icon_chevron_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:alpha=".8"
                            android:background="@drawable/ic_chevron_right_black_24dp"/>

                    </RelativeLayout>

                    <View
                        android:id="@id/view3"
                        android:layout_width="wrap_content"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_below="@+id/rate_app"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                    <RelativeLayout
                        android:id="@+id/exit"
                        android:layout_below="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="@drawable/form7">

                        <ImageView
                            android:id="@+id/icon_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:background="@drawable/ic_exit_to_app_black_24dp"/>

                        <TextView
                            android:id="@+id/text9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exit"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon_6"
                            android:layout_marginStart="9dp"
                            android:textColor="#000"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:alpha=".5"
                    android:layout_below="@+id/relativeLayout3"
                    android:layout_centerHorizontal="true"
                    android:background="#B3B3B3"/>


                <RelativeLayout
                    android:id="@+id/about"
                    android:layout_below="@+id/view3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_love"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:background="@drawable/heart_icon"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/by"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/made"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Made with"
                        android:textSize="17dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/icon_love"
                        android:textColor="#000"
                        android:alpha=".7"
                        android:fontFamily="@font/exo2semibold"/>

                    <TextView
                        android:id="@+id/by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="By"
                        android:textSize="17dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="#000"
                        android:alpha=".7"
                        android:fontFamily="@font/exo2semibold"/>

                    <TextView
                        android:id="@+id/AimeneNouri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aimene Nouri"
                        android:layout_centerVertical="true"
                        android:textSize="17dp"
                        android:layout_toEndOf="@+id/by"
                        android:textColor="@color/colorPrimary"
                        android:alpha=".9"
                        android:fontFamily="@font/exo2semibold"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>