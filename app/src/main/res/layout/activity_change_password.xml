<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivities.SettingsItems.Change_password"
    android:background="#F8F8FF"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_keyboard_backspace_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:elevation="1dp"
        />

    <TextView
        android:id="@+id/reset_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/backButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:alpha=".89"
        android:textSize="26dp"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/reset_password_text">

        <EditText
            android:id="@+id/currentPassword"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:ems="10"
            android:hint="@string/current_password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:singleLine="true"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/showCurrentPassword"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/eye_focused"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/HideCurrentPassword"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_visibility_off_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:elevation="5dp"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/layout1">

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:ems="10"
            android:hint="@string/new_Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:padding="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/showHideNewPassword"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/eye_focused"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/HideNewPassword"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:elevation="5dp"
            android:background="@drawable/ic_visibility_off_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/layout2">

        <EditText
            android:id="@+id/confirm_new_password"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:ems="10"
            android:hint="@string/confirm"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:singleLine="true"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/showConfirmPassword"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/eye_focused"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/HideConfirmPassword"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:elevation="5dp"
            android:background="@drawable/ic_visibility_off_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Update Password"
        android:padding="10dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:background="@drawable/button1"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:elevation="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_successfully"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/icon_succeed"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/successful"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/reset_successfully"
            app:lottie_autoPlay="true"
            />

        <TextView
            android:id="@+id/reset_successfully"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_reset"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:alpha=".85"
            android:textSize="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_successfully"
            android:textStyle="bold"
            android:layout_below="@+id/reset_successfully"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"/>

    </RelativeLayout>

</RelativeLayout>