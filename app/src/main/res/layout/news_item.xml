<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/news_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="7dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:indeterminateTint="@color/colorPrimary"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/news_picture"
                    android:transitionName="img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    tools:ignore="UnusedAttribute"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/shadow_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/layout2"
                android:background="@drawable/bottomshadow"
                />

            <FrameLayout
                android:id="@+id/layoutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:layout_marginTop="-40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="7dp"
                android:padding="5dp"
                android:layout_below="@+id/layout2">

                <ImageView
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center|left"
                    />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/publishedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01 January 2020"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="27dp"
                    android:layout_gravity="center|left"
                    android:textSize="12sp"
                    />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/layout2"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nine Drug Company CEOs Sign Pledge on Covid-19 Vaccine"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/news_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statement aims to address concerns over a rush to mass vaccination"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_below="@+id/news_title"
                    android:visibility="gone"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2semibold"
                    android:text="8 hours ago"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/exo2semibold"
                    android:text="@string/Read_more"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@drawable/button_next"
                    android:clickable="true"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <!--<View
        android:layout_below="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_height="0.8dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:background="#B3B3B3"/>-->

</RelativeLayout>