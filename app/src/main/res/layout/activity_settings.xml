<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.Settings"
    android:background="#F8F8FF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="34.5dp"
                android:layout_height="34.5dp"
                android:background="@drawable/close"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"
                android:elevation="1dp"
                />

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="9dp"
                android:layout_below="@+id/backButton"
                android:layout_marginTop="30dp"
                android:elevation="5dp"
                android:background="@drawable/half">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userPicture"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person"
                    android:layout_marginStart="10dp"
                    android:elevation="1dp"
                    android:layout_marginEnd="5dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@color/white"
                    android:layout_marginStart="7.8dp"
                    />

                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aimene Nouri"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/exo2semibold"
                    android:layout_toEndOf="@+id/userPicture"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aimene.ucd@gmail.com"
                    android:textSize="15dp"
                    android:layout_below="@+id/UserName"
                    android:layout_toEndOf="@+id/userPicture"
                    android:textColor="@color/white"
                    android:layout_marginStart="11dp"
                    android:alpha=".8"
                    />

            </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_1"
                    android:layout_marginTop="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form7">

                    <View
                        android:id="@id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                    <RelativeLayout
                        android:layout_below="@+id/view"
                        android:id="@+id/edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="@drawable/form7">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/edit"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"/>

                        <ImageView
                            android:id="@+id/icon_chevron1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:alpha=".8"
                            android:background="@drawable/ic_chevron_right_black_24dp"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon1"
                            android:textColor="#000"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_1"
                        android:layout_below="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="0.8dp"
                        android:alpha=".5"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:background="#B3B3B3"/>

                    <RelativeLayout
                        android:id="@+id/change_password"
                        android:layout_below="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:clickable="true"
                        android:background="@drawable/form7">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:background="@drawable/ic_lock_outline_black_24dp"/>

                        <ImageView
                            android:id="@+id/icon_chevron2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ic_chevron_right_black_24dp"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Password"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icon2"
                            android:textColor="#000"
                            />

                    </RelativeLayout>

                    <!--<View
                        android:id="@+id/view_2"
                        android:layout_below="@+id/change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="0.8dp"
